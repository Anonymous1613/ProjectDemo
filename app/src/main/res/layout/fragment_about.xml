<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textViewAppTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WheelWays"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/textViewAppVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version: 1.0"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is designed to help HCL TECH Team to operate Bi-Cycle Issuance and maintain records remotely."
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textViewDeveloperInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developed by: Sudharshan"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textViewContactInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact: Anonymous0710@gmail.com"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textViewLegalInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Legal: Copyright Â© 2024 Sudharshan. All rights reserved."
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textViewAcknowledgments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acknowledgments: This app uses libraries Firebase Analytis,POI Apache."
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textViewChangelog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Changelog: - Version 1.0: Initial release."
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textViewSocialMedia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Follow us on: Facebook, Twitter, Instagram"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

        </LinearLayout>
    </ScrollView>

</FrameLayout>